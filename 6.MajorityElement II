class Solution {
public:
    vector<int> majorityElement(vector<int>& nums) {
        //here we can either get 0,1 or 2 elements greater than n/3 times
        //0: [6, 2, 3, 2, 3, 5]
        //1: [4, 4, 1, 2, 4]
        //2: [1, 2, 1, 2]
        int n=nums.size();
        int candidate1 = INT_MIN, candidate2 = INT_MIN;
        int life1=0, life2=0;
        
        for(int i=0; i<n; i++){
            if(nums[i]==candidate1){
                life1++;
            }
            else if(nums[i]==candidate2){
                life2++;
            }
            else if(nums[i]!=candidate1 && life1==0){
                candidate1=nums[i];
                life1++;
            }
            else if(nums[i]!=candidate2 && life2==0){
                candidate2=nums[i];
                life2++;
            }
            else{
                life1--;
                life2--;
            }
        }
        vector<int> ans;
        int count1=0, count2=0;
        for(int i=0; i<n; i++){
            if(candidate1==nums[i])
                count1++;
            if(candidate2==nums[i])
                count2++;            
        }
        if(count1 > n/3)
            ans.push_back(candidate1);
        if(count2 > n/3)
            ans.push_back(candidate2);
        
        return ans;
    }
};
