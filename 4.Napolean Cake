#include<bits/stdc++.h>
using namespace std;

void solve() {
    int n;
    cin>>n;
    vector<int> arr(n);
    vector<int> res(n, 0);
    for(int i=0; i<n; i++){
        cin>>arr[i];
    }

    int temp = arr[n-1];
    for(int i=n-1; i>=0; i--){
        if(temp!=0 || arr[i]!=0){
            res[i]=1;
            temp=max(temp, arr[i]);
            temp--;
        }else{
            temp = arr[i];
        }
    }

    for(auto i: res)
        cout<<i<<" ";
    cout<<endl;
}

int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0); 
    cout.tie(0);
    int tc = 1;
    cin >> tc;
    for (int t = 1; t <= tc; t++) {
        // cout << "Case #" << t << ": ";
        solve();
    }
}
